{% extends 'kid/base.html.twig' %}

{% block title %}{{ 'editData'|trans }} {{ kid.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags(kid.sex.value) }}
{% endblock %}

{% block body %}
    <div class="container-lg my-5">
        <h2>{{ 'editData'|trans }}</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">{{ 'main'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_infant_index') }}">{{ 'infants'|trans }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ kid.name }}</li>
            </ol>
        </nav>
        <a class="btn btn-info" href="{{ path('app_infant_index')}}" role="button">{{ 'button.backToList'|trans }}</a>
        <div class="container-lg my-5">
            <div class="row">
                <div class="col-4 mb-2">
                    {{ include('kid/_form.html.twig', {'button_label': 'button.update'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-4 mb-2">
                    {{ include('kid/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
