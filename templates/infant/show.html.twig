{% extends 'base.html.twig' %}

{% block title %}Infant{% endblock %}

{% block body %}
    <h1>Infant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ infant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ infant.name }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ infant.dateOfBirth ? infant.dateOfBirth|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ infant.sex }}</td>
            </tr>
        </tbody>
    </table>
    {% for adult in adults %}
        <tr>
            <td>{{ adult.name }}</td>
            <td>{{ adult.surname }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    <a href="{{ path('app_infant_index') }}">back to list</a>

    <a href="{{ path('app_infant_edit', {'id': infant.id}) }}">edit</a>

    {{ include('infant/_delete_form.html.twig') }}
{% endblock %}
