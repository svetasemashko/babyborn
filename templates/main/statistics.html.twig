{% extends 'base.html.twig' %}

{% block title %}{{ 'statistics'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-lg my-5">
        <h2>{{ 'statistics'|trans }}</h2>

        <div class="container-lg my-5">
            <div class="row">
                <div class="col-sm">
                    {% for kid in kids %}
                        <div class="row">
                            {{ kid }}
                        </div>
                    {% endfor %}
                </div>
                <div class="col-sm">
                    {% for adult in adults %}
                        <div class="row">
                            {{ adult }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

